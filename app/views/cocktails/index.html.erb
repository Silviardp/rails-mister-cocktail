
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4),rgba(0,36,60,0.4)), url(/assets/cocktails.jpg);">
  <div class="container">
    <h1>Cocktail o'clock!</h1>
    <p>Tick, tock, it's cocktail o'clock </p>
  </div>
</div>

<h1 class="text-center m-2 p-2" >Cocktail List</h1>
<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail) do %>
    <div class="cards-category">
    <h3><%= cocktail.name %></h3>
    </div>
    <% end %>
  <% end %>
</div>

