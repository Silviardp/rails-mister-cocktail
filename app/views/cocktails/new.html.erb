<div class="container mt-3">
  <h1 class="text-center mb-3">Add a new cocktail</h1>
  <div class="row mt-3 justify-content-center pt-3">
    <div class="col-6">
      <%= simple_form_for @cocktail do |f| %>
      <%= f.error_notification %>
      <%= f.input :name %>
      <%= f.input :photo, as: :file %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.button :submit, class: "btn-primary" %>
      <%= link_to "Cancel", cocktails_path, class: "btn btn-outline-primary" %>
      <% end %>
    </div>
  </div>
</div>
